<!doctype HTML>
<html>

<head>
  <title>Crapper News</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/angularApp.css" rel="stylesheet">

  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
</head>

<body ng-app="crapperNews">

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>
  </div>

  <!--Home Template-->
  <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Crapper News</h1>
    </div>

    <div ng-repeat="post in posts | orderBy:'-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(post)"></span>
      <span class="post-upvotes">
          {{post.upvotes}}
        </span>
      <span class=news-title>
          <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span ng-hide="post.link">
            {{post.title}}
          </span>
      <a id="comments-link" href="#/posts/{{post._id}}">Comments</a>
      </span>
    </div>

    <form role="form" class="form" ng-submit="addPost()">
      <h3>Add a new story</h3>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Title" ng-model="title" required></input>
      </div>
      <div class="form-group">
        <input type="url" class="form-control" placeholder="Link" ng-model="link"></input>
      </div>
      <button class="btn btn-primary" type="submit">Post</button>
    </form>
  </script>

  <!--Posts Template-->
  <script type="text/ng-template" id="/posts.html">
    <div class="page-header">
      <h3>
          <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span ng-hide="post.link">
            {{post.title}}
          </span>
        <h3>
      </div>

      <div ng-repeat="comment in post.comments | orderBy:-'upvotes'">
        <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span class="comment-body">
          {{comment.body}}
        </span>
      </div>

      <form role="form" class="form" ng-submit="addComment()">
        <h3>Add a new comment</h3>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Comment" ng-model="body" required></input>
      </div>
      <button class="btn btn-primary" type="submit">Post</button>
      </form>
  </script>

</body>

</html>
